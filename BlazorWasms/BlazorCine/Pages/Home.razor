@page "/"
@using BlazorCine.Services
@using Business.DTOs
@inject IHorario HorarioService

<h3>Lista de Horarios</h3>

@if (horarios != null)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sala</th>
                <th>Película</th>
                <th>Fecha y Hora</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var horario in horarios)
            {
                <tr>
                    <td>@horario.IdHorario</td>
                    <td>@horario.NombreSala</td>
                    <td>@horario.NombrePelicula</td>
                    <td>@horario.FechaYHora.ToString("g")</td>
                    <td>
                        <button class="btn btn-primary btn-sm" @onclick="() => EditHorario(horario.IdHorario)">Editar</button>
                        <button class="btn btn-danger btn-sm" @onclick="() => DeleteHorario(horario.IdHorario)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Cargando...</p>
}

